<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerMotionLayout">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000"
        motion:motionInterpolator="linear" >

        <KeyFrameSet>
            <KeyPosition
                motion:framePosition="0"
                motion:motionTarget="@id/container"
                motion:percentX="0.0"
                motion:percentY="0.0" />

            <KeyPosition
                motion:framePosition="100"
                motion:motionTarget="@id/container"
                motion:percentX="1.0"
                motion:percentY="1.0" />

            <KeyAttribute
                motion:framePosition="0"
                motion:motionTarget="@id/histContainer"
                motion:attributeName="alpha"
                android:value="0" />

            <KeyAttribute
                motion:framePosition="100"
                motion:motionTarget="@id/histContainer"
                motion:attributeName="alpha"
                android:value="1" />
        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/histContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="0"
            android:foregroundGravity="bottom|clip_vertical"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/tv_input"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/histContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="1"
            android:foregroundGravity="bottom|clip_vertical"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/tv_input"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
        </Constraint>
    </ConstraintSet>

</MotionScene>