<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/displayBackground"
    app:layoutDescription="@xml/pulldown_scene"
    tools:context=".CalcActivity">

    <com.example.bootcamppractice.utils.TouchFrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="bottom|clip_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/pulldownContainer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent=".4"
                app:layout_constraintTop_toTopOf="parent">
                <!--  History Display  -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/histContainer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:elevation="5dp"
                    android:foregroundGravity="bottom|clip_vertical"
                    android:layout_gravity="top"
                    app:layout_constraintHeight_default="percent"
                    app:layout_constraintHeight_percent=".52"
                    app:layout_constraintTop_toTopOf="parent"/>

                <!--  Input Display  -->
                <EditText
                    android:id="@+id/tv_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:layout_gravity="end|bottom"
                    android:cursorVisible="false"
                    android:inputType="text"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:textSize="52sp"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    app:layout_constraintTop_toBottomOf="@id/histContainer"/>
                <EditText
                    android:id="@+id/tv_display"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="end|bottom"
                    android:singleLine="true"
                    android:textAlignment="textEnd"
                    android:textColor="#b3b3b3"
                    android:textSize="34sp"
                    android:background="@null"
                    android:clickable="false"
                    android:focusable="false"
                    app:layout_constraintTop_toBottomOf="@id/tv_input"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_default="percent"
                app:layout_constraintHeight_percent=".6"
                app:layout_constraintBottom_toBottomOf="parent">

                <!--  Buttons  -->
                <LinearLayout
                    android:id="@+id/buttonContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="25"
                    android:orientation="vertical"
                    android:elevation="3dp"
                    android:background="@color/contentBackground"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:id="@+id/row0"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:gravity="start">

                        <Button
                            android:id="@+id/btnClear"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="C"
                            android:textSize="48sp"
                            android:textColor="#B3CEE5"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btnDivide"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="÷"
                            android:textSize="48sp"
                            android:textColor="#B3CEE5"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btnMultiply"
                            android:layout_weight="2"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="×"
                            android:textSize="48sp"
                            android:textColor="#B3CEE5"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btnBackspace"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:layout_weight="2"
                            android:backgroundTint="@color/contentBackground"
                            android:text="⌫"
                            android:textColor="#B3CEE5"
                            android:textSize="40sp" />

                        <!--            <ImageButton-->
                        <!--                android:id="@+id/btnBackspace"-->
                        <!--                android:layout_weight="25"-->
                        <!--                android:layout_width="0dp"-->
                        <!--                android:layout_height="90dp"-->
                        <!--                android:src="@drawable/backspace_svg"-->
                        <!--                app:tint="#B3CEE5"-->
                        <!--                android:backgroundTint="@color/contentBackground"/>-->

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:gravity="start">

                        <Button
                            android:id="@+id/btn7"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="7"
                            android:textSize="48sp"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btn8"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="8"
                            android:textSize="48sp"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btn9"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="9"
                            android:textSize="48sp"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btnSubtract"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="—"
                            android:textSize="42sp"
                            android:textColor="#B3CEE5"
                            android:backgroundTint="@color/contentBackground"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:gravity="start">

                        <Button
                            android:id="@+id/btn4"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:text="4"
                            android:textSize="48sp"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btn5"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:text="5"
                            android:textSize="48sp"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btn6"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:text="6"
                            android:textSize="48sp"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btnAdd"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:text="+"
                            android:textSize="42sp"
                            android:textColor="#B3CEE5"
                            android:backgroundTint="@color/contentBackground"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:gravity="start">

                        <Button
                            android:id="@+id/btn1"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="1"
                            android:textSize="48sp"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btn2"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="2"
                            android:textSize="48sp"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btn3"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="3"
                            android:textSize="48sp"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btnEquals"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="="
                            android:textSize="42sp"
                            android:textColor="#B3CEE5"
                            android:backgroundTint="@color/contentBackground"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/row4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:orientation="horizontal"
                        android:gravity="start">

                        <Button
                            android:id="@+id/btnBlank1"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="•ᴗ•"
                            android:textSize="42sp"
                            android:textColor="#B3CEE5"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btn0"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="0"
                            android:textSize="48sp"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btnPoint"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="."
                            android:textSize="48sp"
                            android:textColor="#B3CEE5"
                            android:backgroundTint="@color/contentBackground"/>

                        <Button
                            android:id="@+id/btnBlank2"
                            android:layout_weight="25"
                            android:layout_width="0dp"
                            android:layout_height="90dp"
                            android:text="•ᴗ•"
                            android:textSize="42sp"
                            android:textColor="#B3CEE5"
                            android:backgroundTint="@color/contentBackground"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.example.bootcamppractice.utils.TouchFrameLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>